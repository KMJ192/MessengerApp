<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChattingRoomActivity"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_contents"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/message_contents">

        <EditText
            android:id="@+id/edit_text_chat"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:autofillHints=""
            tools:ignore="LabelFor"/>

        <Button
            android:id="@+id/button_inputContent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/send_button"
            android:layout_toEndOf="@+id/edit_text_chat"/>

    </RelativeLayout>

</RelativeLayout>